<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/appdevelopmentbanner" />

    <LinearLayout
        android:layout_marginTop="15dp"
        android:id="@+id/linearlay1"
        android:layout_below="@+id/imageView2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:id="@+id/linear_lay_1"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginEnd="3dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                card_view:cardBackgroundColor="@color/off_color_orange"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view"
                android:layout_width="170dp"
                android:layout_height="120dp"
                android:elevation="10dp">
                <LinearLayout
                    android:layout_gravity="center"
                    android:weightSum="2"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/android_phone"
                        android:src="@drawable/androidphone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center" />

                    <TextView

                        android:textColor="@color/bg"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:text="@string/androiddevelop"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />


                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginStart="3dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                card_view:cardBackgroundColor="@color/off_color_orange"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_gravity="center"
                android:layout_width="170dp"
                android:layout_height="120dp"
                android:id="@+id/card_view1"
                card_view:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_gravity="center"
                    android:weightSum="2"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_weight="1"
                        android:id="@+id/ios"
                        android:src="@drawable/ios_developemt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/bg"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:text="@string/iosdevelop"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />


                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>

    </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginEnd="3dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    card_view:cardBackgroundColor="@color/off_color_orange"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view3"
                    android:layout_width="170dp"
                    android:layout_height="120dp"
                    android:elevation="10dp">
                    <LinearLayout
                        android:layout_gravity="center"
                        android:weightSum="2"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/windows"
                            android:src="@drawable/windows"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center" />

                        <TextView

                            android:textColor="@color/bg"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:text="@string/windowsdevelop"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />


                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginStart="3dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    card_view:cardBackgroundColor="@color/off_color_orange"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_gravity="center"
                    android:layout_width="170dp"
                    android:layout_height="120dp"
                    android:id="@+id/card_view2"
                    card_view:cardCornerRadius="4dp">

                    <LinearLayout
                        android:layout_gravity="center"
                        android:weightSum="2"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_weight="1"
                            android:id="@+id/crossPlatform"
                            android:src="@drawable/crossplatform12"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:paddingBottom="10dp"/>

                        <TextView

                            android:textStyle="bold"
                            android:textColor="@color/bg"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="@string/Crossplatform"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>


                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="51dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/favicon" />


</RelativeLayout>